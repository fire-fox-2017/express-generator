<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="container">
      <div>
        <form class="" action="/users/add" method="POST">
          <input type="text" name="first_name" value="">
          <input type="text" name="last_name" value="">
          <button type="submit">submit</button>
        </form>
      </div>

      <div class="row">
        <table>
          <thead>
            <tr>
              <th>No</th>
              <th>First Name</th>
              <th>Last Name</th>
            </tr>
          </thead>
          <tbody>
            <!-- contoh javascript -->
            <%
            let no = 1;
            users.forEach(u => {
              %>
            <tr>
              <td><%- no%></td>
              <td><%- u.first_name %></td>
              <td><%- u.last_name %></td>
            </tr>
            <%
            no++
          })
          %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
